# BoardBreeze Lambda Hackathon - Environment Variables Template
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_REGION=us-east-2
AWS_ACCOUNT_ID=your-account-id-here

# S3 Configuration
S3_BUCKET_NAME=your-boardbreeze-audio-bucket
S3_REGION=us-east-2

# Lambda Configuration
LAMBDA_FUNCTION_NAME=boardbreeze-audio-splitter
LAMBDA_MEMORY_SIZE=3008
LAMBDA_TIMEOUT=900

# Audio Processing Configuration
SEGMENT_DURATION_HOURS=3.5
MAX_FILE_DURATION_HOURS=4

# Transcription Configuration
TRANSCRIBE_LANGUAGE_CODE=en-US
TRANSCRIBE_OUTPUT_BUCKET=your-transcription-output-bucket

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info

# Optional: Custom FFmpeg Layer ARN (if using custom layer)
# FFMPEG_LAYER_ARN=arn:aws:lambda:us-east-2:123456789012:layer:ffmpeg:1

# Optional: SNS Topic for notifications
# SNS_TOPIC_ARN=arn:aws:sns:us-east-2:123456789012:boardbreeze-notifications

# Security Note:
# Never commit actual AWS credentials or sensitive values to version control
# Use AWS IAM roles and policies for secure access management
